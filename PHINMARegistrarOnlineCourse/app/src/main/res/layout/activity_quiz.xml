<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phinmaregistraronlinecourse.activity.QuizActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/questionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_large"
                android:layout_alignParentTop="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question _/_"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_size_medium"
                    android:layout_marginBottom="@dimen/margin_medium"/>
                <TextView
                    android:id="@+id/txtQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/moduleSix_overview"
                    android:textSize="@dimen/title_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_large"
                android:layout_below="@+id/questionLayout">

                <Button
                    android:id="@+id/btnChoice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choice 1"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="@dimen/margin_side_medium"
                    android:layout_marginLeft="@dimen/margin_side_medium"/>
                <Button
                    android:id="@+id/btnChoice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choice 2"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="@dimen/margin_side_medium"
                    android:layout_marginLeft="@dimen/margin_side_medium"/>
                <Button
                    android:id="@+id/btnChoice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choice 3"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="@dimen/margin_side_medium"
                    android:layout_marginLeft="@dimen/margin_side_medium"/>
                <Button
                    android:id="@+id/btnChoice4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choice 4"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/margin_side_medium"
                    android:layout_marginLeft="@dimen/margin_side_medium"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/textColor"
        android:padding="@dimen/margin_medium">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


</RelativeLayout>
