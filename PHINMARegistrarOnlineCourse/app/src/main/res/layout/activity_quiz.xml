<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phinmaregistraronlinecourse.activity.QuizActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/questionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_large"
                android:layout_alignParentTop="true">
                <TextView
                    android:id="@+id/txtQuestionHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question _/_"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_size_medium"
                    android:layout_marginBottom="@dimen/margin_medium"/>
                <TextView
                    android:id="@+id/txtQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/moduleSix_overview"
                    android:textSize="@dimen/title_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_large"
                android:layout_below="@+id/questionLayout">

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New RadioButton"
                        android:id="@+id/choice1"
                        android:textSize="@dimen/title_size_medium"
                        android:background="@drawable/custon_radiobutton"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New RadioButton"
                        android:id="@+id/choice2"
                        android:textSize="@dimen/title_size_medium"
                        android:background="@drawable/custon_radiobutton"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New RadioButton"
                        android:id="@+id/choice3"
                        android:textSize="@dimen/title_size_medium"
                        android:background="@drawable/custon_radiobutton"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New RadioButton"
                        android:id="@+id/choice4"
                        android:textSize="@dimen/title_size_medium"
                        android:background="@drawable/custon_radiobutton"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/textColor"
        android:padding="@dimen/margin_medium">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:onClick="GotoNext"
            />
    </RelativeLayout>


</RelativeLayout>
